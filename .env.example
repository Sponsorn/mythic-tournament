# Warcraft Logs API credentials (required for scoring)
WCL_CLIENT_ID=
WCL_CLIENT_SECRET=
WCL_POLL_INTERVAL_MINUTES=5
WCL_REQUIRE_KILL=true

# Event window (optional, restricts which runs count)
# Format: YYYY-MM-DD HH:MM (interpreted in REALM_TZ timezone)
# Example: 2026-01-31 18:00
EVENT_START_SE=
EVENT_END_SE=
EVENT_ENFORCE_WINDOW=false

# M+ scoring
MPLUS_DEATH_PENALTY_LT12=5
MPLUS_DEATH_PENALTY_GE12=15
REALM_TZ=Europe/Stockholm

# Web server
WEB_PORT=3000
WEB_HOST=0.0.0.0
POLL_INTERVAL_ACTIVE_MS=60000
POLL_INTERVAL_IDLE_MS=300000

# Security (optional)
# CORS_ORIGINS: comma-separated list of allowed origins (empty = allow all)
CORS_ORIGINS=
# ADMIN_SECRET: shared secret for admin socket authentication.
# If set, admin clients must pass this secret when connecting to perform
# admin actions (edit teams, force refresh, pause/resume).
# to share a url: http://localhost:3000/admin/?secret=YOUR_SECRET_HERE
# If empty, no auth is required and all connections can use admin features.
ADMIN_SECRET=

# Logging (debug, info, warn, error)
LOG_LEVEL=info
